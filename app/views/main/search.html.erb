<%
	@meta = Page.find_by lcl_name: 'search'
	meta title: 	@meta.title,
	description: 	strip_html(@meta.description),
	keywords: 		@meta.keywords.gsub(" ", ",")
%>
<div class="header_bc">
	<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
		<li class="unavailable"  aria-disabled="true">>></li>
	    <li role="menuitem"><a href="/">Home</a></li>
	    <li role="menuitem" class="current"><a href="#"><%= @meta.title %></a></li>
	</nav>
</div>

<div class="row">
<div class="small-12 columns" >
<h1><%= @meta.title %></h1>
You searched for " <span class="color-accent"><%= @query %></span> "
<br>
<ul style="list-style-type: none;">
<li class="has-form" id="search_form">
  <%= form_tag search_path, method: :get %>
  search again <input type="text" id="query" name="query" value="<%= @query %>" />
  </form>
</li>
</ul>
<% if @query.length > 0 %>
<div data-magellan-expedition="fixed">
  <dl class="sub-nav">
    <dd data-magellan-arrival="products"><a href="#products">Products (<%= @products.length %>) &amp; Downloads (<%= @downloads.length %>)</a></dd>
    <dd data-magellan-arrival="news"><a href="#news">News (<%= @news.length %>)</a></dd>
    <dd data-magellan-arrival="videos"><a href="#videos">Videos (<%= @videos.length %>)</a></dd>
    <dd data-magellan-arrival="kbs"><a href="#kbs">Knowledgebase ()</a></dd>
    <dd data-magellan-arrival="pages"><a href="#pages">Other Pages (<%= @pages.length %>)</a></dd>
  </dl>
</div>
<div id="results_products_and_downloads">
  <%= render_partial 'main/search/results_products_and_downloads' %>
</div>
<div id="results_newss">
  <%= render_partial 'main/search/results_news' %>
</div>
<div id="results_videos">
  <%= render_partial 'main/search/results_videos' %>
</div>
<div id="results_kbs">
  <%= render_partial 'main/search/results_kbs' %>
</div>
<div id="results_pages">
  <%= render_partial 'main/search/results_pages' %>
</div>
<% else %>
<div style="height: 400px" class="color-accent">Your search criteria is blank. Please try again.</div>
<% end %>
</div>
</div>
<script>
$(document).foundation({
"magellan-expedition": {
  active_class: 'active', // specify the class used for active sections
  threshold: 0, // how many pixels until the magellan bar sticks, 0 = auto
  destination_threshold: 50, // pixels from the top of destination for it to be considered active
  throttle_delay: 100, // calculation throttling to increase framerate
  fixed_top: 50, // top distance in pixels assigend to the fixed element on scroll
  offset_by_height: false // whether to offset the destination by the expedition height. Usually you want this to be true, unless your expedition is on the side.
}
});
</script>