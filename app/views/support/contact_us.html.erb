<%
	@meta = Page.find_by lcl_name: 'contact_us'
	meta title: @meta.title,
	description: strip_html(@meta.description),
	keywords: @meta.keywords.gsub(" ", ","),
	reverse: true,
	canonical: request.original_url
%>
<div class="header_bc">
	<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
		<li class="unavailable"  aria-disabled="true">>></li>
	    <li role="menuitem"><a href="/">Home</a></li>
	    <li role="menuitem"><a href="/support">Support</a></li>
	    <li role="menuitem" class="current"><a href="#"><%= @meta.title %></a></li>
	</nav>
</div>

<div class="row">
<div class="small-12 columns" >
<h1><%= @meta.title %></h1>
<%= form_for @user, url: contact_us_path, html: {class: "reg", "data-abide" => ''} do |f| %>

	<%= render :partial => "shared/form_contacts_section", :locals => {:f => f} %>
	<%= render :partial => "shared/form_enquiries_section", :locals => {:f => f} %>	  	
	<div class="row">
	<div class="small-12 columns">
		<%= render :partial => "shared/form_optins_section", :locals => {:f => f} %>
		<div class="right"><%= f.submit t('submit') %></div>
	</div>
	</div>

<% end %>
</div>
</div>

