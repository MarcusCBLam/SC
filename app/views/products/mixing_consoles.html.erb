<%
@Breadcrumbs.where(:lcl_name => "mixing_consoles").each do |bc|
	
	meta title: bc.title,
	description: truncate(bc.description, length: 100),
	keywords: %w(bc.keywords),
	reverse: true,
	canonical: bc.web_url

%>
<div class="header_bc">
<nav class="breadcrumbs" role="menubar" aria-label="breadcrumbs">
	<li class="unavailable"  aria-disabled="true">>></li>
    <li role="menuitem"><a href="/">Home</a></li>
    <li role="menuitem"><a href="/products">Products</a></li>
    <li role="menuitem" class="current"><a href="#"><%= bc.title %></a></li>
</nav>
</div>
<% end %>
<div class="row">
	<div class="small-12 columns">
		<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
			<% @products.select(:product_sub_category_id).distinct.order(:product_sub_category_id).each do |pc| %>
			
  				<li><b><%= pc.product_sub_category.name %></b><BR>
  					<% @products.where(:product_sub_category_id => pc.product_sub_category_id ).order(:position).each do |p| %>
  					<%= p.name %><br>
  					<% end %>
  				</li>
  				
			<% end %>
		</ul>
	</div>
	<div class="small-12 columns">
		
			Discontinued products
		
	</div>	

</div>
